# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration (REQUIRED)
# For development (SQLite):
DATABASE_URL="file:./dev.db"
# For production (PostgreSQL):
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?schema=public"

# Capital One Nessie API (REQUIRED)
# Get your API key from: http://api.nessieisreal.com
NESSIE_API_KEY=your_nessie_api_key_here
NESSIE_BASE_URL=http://api.nessieisreal.com

# AI/LLM Provider (REQUIRED)
# Supported providers: OpenAI, Anthropic, etc.
AI_API_KEY=your_ai_api_key_here
AI_MODEL=gpt-4

# Frontend URL for CORS (REQUIRED)
FRONTEND_URL=http://localhost:5173
